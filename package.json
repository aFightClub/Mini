{
  "name": "mini",
  "productName": "Mini",
  "version": "1.0.0",
  "description": "Image minification app for web optimization",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "dev:vite": "vite",
    "dev:electron": "cross-env ELECTRON_ENV=development electron .",
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "build": "vite build",
    "package": "electron-builder --dir",
    "dist": "vite build && electron-builder",
    "publish": "vite build && electron-builder --publish always",
    "lint": "eslint . --ext js,jsx,ts,tsx --report-unused-disable-directives --max-warnings 0"
  },
  "author": "aFightClub",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aFightClub/Mini.git"
  },
  "homepage": "https://github.com/aFightClub/Mini",
  "bugs": {
    "url": "https://github.com/aFightClub/Mini/issues"
  },
  "dependencies": {
    "electron-log": "^5.3.3",
    "electron-updater": "^6.6.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp": "^0.33.2"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "electron": "^35.1.3",
    "electron-builder": "^26.0.12",
    "electron-notarize": "^1.2.2",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  },
  "build": {
    "appId": "com.miniimageoptimizer.app",
    "productName": "Mini",
    "copyright": "Copyright Â© 2025 - Wynter.ai",
    "files": [
      "dist/**/*",
      "src/main/**/*",
      "src/images/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "src/images",
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.graphics-design",
      "icon": "src/images/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.plist",
      "entitlementsInherit": "entitlements.plist",
      "target": [
        "zip",
        "dmg"
      ]
    },
    "win": {
      "icon": "src/images/icon.ico",
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "icon": "src/images/icon.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Graphics"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "owner": "aFightClub",
      "repo": "Mini",
      "private": false
    },
    "afterSign": "src/notorize.js"
  }
}
